function howMuchILoveYou(nbPetals) {
  let love = 
{
0: "not at all",  
1: "I love you",
2: "a little",
3: "a lot",
4: "passionately",
5: "madly",

}
  return love[nbPetals%6]
}


////////////

let love = [
"I love you",
"a little",
"a lot",
"passionately",
"madly",
"not at all",
]



function howMuchILoveYou(nbPetals) {
  return love[(nbPetals - 1) % 6]
}
